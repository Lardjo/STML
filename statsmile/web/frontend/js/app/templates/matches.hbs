<div class="container">
  <div class="page-header">
    <h2>Matches <small>Summary of latest matches</small></h2>
  </div>
  {{#if model}}
  <table class="table table-hover">
  <thead>
    <tr>
      <th>Match ID</th>
      <th>Result</th>
      <th>Mode</th>
      <th>Duration</th>
      <th>The Radiant</th>
      <th>the Dire</th>
    </tr>
  </thead>
  <tbody>
    {{#each model}}
    <tr>
      <td>{{#link-to 'match' id}}{{id}}{{/link-to}}</td>
      {{#if radiant_win}}<td class="text-success">Radiant Victory!</td>{{else}}<td class="text-danger">Dire Victory!</td>{{/if}}
      <td>{{game_mode}}</td>
      <td>{{parse_duration duration}}</td>
      <td></td>
      <td></td>
    </tr>
    {{/each}}
  </tbody>
  </table>
  {{else}}
  <div class="alert alert-warning">Sorry, nobody is here.</div>
  {{/if}}
</div>