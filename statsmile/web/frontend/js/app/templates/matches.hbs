<div class="page-header">
  <h2>Matches <small>Summary of latest matches</small></h2>
</div>
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Match ID</th>
      <th>Result</th>
      <th>Duration</th>
      <th>Mode</th>
      <th>Server</th>
      <th>The Radiant</th>
      <th>The Dire</th>
    </tr>
  </thead>
  <tbody>
    {{#each}}
    <tr>
      <td>{{#link-to 'match' match_id}}{{match_id}}{{/link-to}}</td>
      <td>{{#if radiant_win}}<span class="label label-success">Radiant Victory</span>
          {{else}}<span class="label label-danger">Dire Victory</span>{{/if}}</td>
      <td>{{format-duration duration}}</td>
      <td>{{game-mode game_mode}}</td>
      <td>{{cluster cluster}}</td>
      <td></td>
      <td></td>
    </tr>
    {{/each}}
  </tbody>
</table>