<div class="page-header">
  <h2>Matches <small>Summary of latest matches</small></h2>
</div>
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Match ID</th>
      <th>Result</th>
      <th>Duration</th>
      <th>Mode</th>
      <th>Server</th>
      <th>The Radiant</th>
      <th>The Dire</th>
    </tr>
  </thead>
  <tbody>
    {{#each}}
    <tr>
      <td>{{#link-to 'match' match_id}}{{match_id}}{{/link-to}}</td>
      {{#if radiant_win}}
        <td class="text-success">Radiant Victory</td>
      {{else}}
        <td class="text-danger">Dire Victory</td>
      {{/if}}
      <td>{{format-duration duration}}</td>
      <td>{{game-mode game_mode}}</td>
      <td>{{cluster cluster}}</td>
      <td class="team-container">
        {{#each player in players}}
        {{#if player.radiant}}
        <div class="team-team">
          {{{hero player.hero_id}}}
        </div>
        {{/if}}
        {{/each}}
      </td>
      <td class="team-container">
        {{#each player in players}}
        {{#if player.radiant}}{{else}}
        <div class="team-team">
          {{{hero player.hero_id}}}
        </div>
        {{/if}}
        {{/each}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>